	artViscIntSource
	{
	    type            artificialViscousInterfaceForce;
	    selectionMode   all;
	    fields          (U);						// where source is applied (U)
		method			constant;				// constant, raessi, curvature
		value			0.0012431;				// only used for "constant" method
		gradMethod		grad;			// grad, snGrad
		nSmoothingSteps 0;
		smoothingCoeff  0;

	}

